@model WEB.Models.PlaceViewModels
<div id="PlaceDetails">
    <div id="PlaceDetailsContent">
        <button class="close" type="button" data-dismiss="modal">x</button>
        <img class="PlaceImage" src="~/Content/Images/@Model.Pictures.FirstOrDefault().Name" alt=""/>

        <div class="caption">
            <h3>"Это место"</h3>
            <h4>
                @Model.Name
            </h4>

            <p>
                @Model.Description
            </p>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <p class="lead">
                        @Model.Rating
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script> $('.close').on('click', function (e) {
     $('#PlaceDetails').hide(300);
     selectMarker.setAnimation(null);
        selectMarker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png');
    });
</script>